services: db: build: {
	acornfile: "../../Acornfile"
        context: "../.."
}

containers: app: {
	build: context: "."
	ports: publish: "8000/http"
	consumes: ["db"]
	env: {
		DB_HOST: "@{service.db.address}"
		DB_PORT: "@{service.db.port.3306}"
		DB_NAME: "@{service.db.data.dbName}"
		DB_USER: "@{service.db.secrets.admin.username}"
		DB_PASS: "@{service.db.secrets.admin.password}"
                MY_TEST: "hello"
	}
	if args.dev {
		dirs: "/app":     "./"
		env: FLASK_DEBUG: "1"
	}
}
